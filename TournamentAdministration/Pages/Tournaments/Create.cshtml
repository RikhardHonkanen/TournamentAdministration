@page
@model TournamentAdministration.Pages.Tournaments.CreateModel

<div class="text-center">
    <h1 class="display-4">Create Tournament</h1>
</div>
<div class="text-left">
    <h2>Tournament Name</h2>
    <input type="text" />
    <h2>Venue</h2>
    <form method="post">
        <select name="venue">
            <option value="">Select a venue</option>
            @foreach (var venue in Model.Venues)
            {
                <option value="">@venue.VenueName</option>
            }
        </select>
        <a asp-page="/Venues/Create">Add Venue</a>
    </form>
</div>