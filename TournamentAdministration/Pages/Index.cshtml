@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>    
    <h1><a asp-page="/Tournaments/Create">Create Tournament</a></h1>
</div>

    <h2>Your Tournaments</h2>
    <div class="user-tournaments-list">
        <ul>
            @foreach (var tournament in Model.UserTournaments)
            {
                <li>
                    <h3>@tournament.TournamentName</h3>
                    <h4>@tournament.Game.Title</h4>
                    <p>Game Description here?</p>
                    <p>@tournament.EventTime.ToString("yyyy-MM-dd") - @tournament.Venue.VenueName</p>
                    <h6><a asp-page="/Tournaments/Edit" asp-route-id="@tournament.ID"> - Edit Tournament</a></h6>
                    <h6><a asp-page="/Tournaments/Delete" asp-route-id="@tournament.ID"> - Delete Tournament</a></h6>
                    <p></p>
                </li>
            }
        </ul>
    </div>