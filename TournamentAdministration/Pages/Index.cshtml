@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}


<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <h1><a asp-page="/Tournaments/Create">Create Tournament</a></h1>
    <h1><a asp-page="/Tournaments/AddPlayers">Manage Players</a></h1>
</div>

    <h2>Your Tournaments</h2>
    <div class="user-tournaments-list">
        <ul>
            @foreach (var tournament in Model.UserTournaments)
            {
            <li>
                <h3>@tournament.TournamentName</h3>
                <h6>Game: @tournament.Game.Title</h6>
                <p>@tournament.Description</p>
                <h6>Date: @tournament.EventTime.ToString("yyyy-MM-dd")</h6>
                <h6>Venue: @tournament.Venue.VenueName</h6>
                <h6><a asp-page="/Tournaments/Edit" asp-route-id="@tournament.ID"> - Edit Tournament</a></h6>
                <h6>
                    <a asp-page="/Tournaments/Create" onclick="return confirm
                    ('Are you sure you want to delete this tournament?');"
                       asp-page-handler="Delete" asp-route-id="@tournament.ID"> - Delete Tournament</a>
                </h6>
                <p></p>
            </li>
            }
        </ul>
    </div>
