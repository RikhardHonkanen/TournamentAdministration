@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>    
    <h1><a asp-page="/Tournaments/Create">Create Tournament</a></h1>
</div>
<div class="user-tournaments-list">
    <h2>Your Tournaments</h2>
    <ul>
        @foreach (var tournament in Model.UserTournaments)
            {
                <li>
                    <h3>@tournament.TournamentName - @tournament.Game.Title</h3>
                    <p>
                        @tournament.EventTime.ToString("yyyy-MM-dd") - @tournament.Venue.VenueName
                        <a asp-page="/Tournaments/Edit" asp-route-id="@tournament.ID"> - Edit Tournament</a>
                        <a asp-page="/Tournaments/Delete" asp-route-id="@tournament.ID"> - Delete Tournament</a>
                    </p>                    
                </li>
            }
    </ul>
</div>